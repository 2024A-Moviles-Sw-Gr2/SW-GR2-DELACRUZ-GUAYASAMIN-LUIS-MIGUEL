<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Contenedor para el logo y el título -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginBottom="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!-- Imagen del Auto -->
        <ImageView
            android:id="@+id/ivAutoImage"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:src="@drawable/car" />

        <!-- Título AUTOHISTORY -->
        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="289dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="AUTOHISTORY"
            android:textSize="32sp"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Margen superior para mover el formulario hacia abajo -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:orientation="vertical"> <!-- Ajustar el valor según necesites -->

        <!-- Subtítulo Inicie sesión -->
        <TextView
            android:id="@+id/tvLoginTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="Inicie sesión"
            android:textSize="24sp" />

        <!-- Campo de Usuario -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Usuario:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etUsername"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="Ingrese su usuario"
            android:padding="10dp" />

        <!-- Campo de Contraseña -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Contraseña:"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/etPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            android:background="@drawable/edittext_background"
            android:hint="Ingrese su contraseña"
            android:inputType="textPassword"
            android:padding="10dp" />

        <!-- Botón de Ingresar -->
        <Button
            android:id="@+id/btnLogin"
            android:layout_width="141dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/button_background"
            android:text="Ingresar"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white" />
    </LinearLayout>
</LinearLayout>
