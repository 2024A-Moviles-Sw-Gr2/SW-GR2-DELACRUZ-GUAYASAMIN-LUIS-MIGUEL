<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CRUD_Curso">

    <TextView
        android:id="@+id/tv_tituloC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Crear Curso"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/editTextMateria"
        app:layout_constraintVertical_bias="0.1"
        android:gravity="center" />

    <EditText
        android:id="@+id/editTextMateria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Materia"
        app:layout_constraintTop_toBottomOf="@+id/tv_tituloC"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextNumeroEstudiantes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Número de Estudiantes"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/editTextMateria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextCodigo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Código"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumeroEstudiantes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextActivo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Activo (1 o 0)"
        android:inputType="number"
        app:layout_constraintTop_toBottomOf="@+id/editTextCodigo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <EditText
        android:id="@+id/editTextDuracionHoras"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Duración en Horas"
        android:inputType="numberDecimal"
        app:layout_constraintTop_toBottomOf="@+id/editTextActivo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Guardar"
        android:backgroundTint="@android:color/holo_green_light"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/editTextDuracionHoras"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btnCancelar"
        app:layout_constraintWidth_percent="0.4"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cancelar"
        android:backgroundTint="@android:color/holo_red_light"
        android:textColor="@android:color/white"
        app:layout_constraintTop_toBottomOf="@+id/editTextDuracionHoras"
        app:layout_constraintStart_toEndOf="@+id/btnGuardar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.4"
        android:layout_marginTop="16dp"
        android:padding="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
